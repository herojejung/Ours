<%= link_to admin_user_path(@user) do%>
  <%= image_tag @user.image.variant(resize_to_limit: [100,100]), class: "rounded-circle" %>
<% end %>
<p>ユーザー名: <%= @post_image.user.name %></p>

<p><%= @post_image.title %></p>

<% if @post_image.images.attached? %>
  <% @post_image.images.each do |image| %>
    <%= image_tag image.variant(resize_to_limit: [800, 600]) %>
  <% end %>
<% end %>

<% @post_image.comments.each do |comment| %>
  <div>
    <%= comment.content %>
    <%= link_to 'コメント削除', admin_post_image_comment_path(@post_image, comment), method: :delete, data: { confirm: '本当に削除しますか?' } %>
  </div>
<% end %>

<p>作成日時: <%= @post_image.created_at %></p>
<p>更新日時: <%= @post_image.updated_at %></p>

<%= link_to "削除する",  admin_post_image_path, method: :delete, class: "btn btn-danger mt-0" %>
<p>あ</p>


