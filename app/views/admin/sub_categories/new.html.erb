<%= form_with(model: [:admin, @sub_category.category, @sub_category], local: true, url: admin_sub_categories_path) do |form| %>

<%= form.fields_for :sub_category_attributes do |sc| %>
<%= sc.text_field :name %>
<%= sc.select :category_id, Category.all.map { |c| [c.name, c.id] } %>
<% end %>

  <div class="sub-category-field">
    <%= render "sub_category_fields", form: form, sub_category: @sub_category %>
  </div>
  <div class="actions">
    <%= form.submit "保存" %>
  </div>
<% end %>