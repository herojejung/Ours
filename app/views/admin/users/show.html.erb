<h1><%= @user.name %>さんの詳細</h1>

  <% if @user.image.attached? %>
    <%= image_tag @user.image %>
  <% else %>
    <p>画像はありません</p>
  <% end %>

  <p><%= @user.email %></p>
  
  <%= link_to "削除する",  admin_user_path, method: :delete, class: "btn btn-danger mt-0" %>

  <p><%= @user.created_at.strftime("%Y/%m/%d %H:%M:%S") %></p>