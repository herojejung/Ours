<%= request_path = request.path_info %>
<%= form_with model: post_image, url: post_image.new_record? ? user_post_images_path : user_post_image_path(post_image) do |f| %>
<%= render 'users/shared/error_messages', resource: f.object %>

<div id="new-image"></div>
	<div class="field">
		<i class="fa-regular fa-image"></i>
    <%=f.label :"画像"%>
    <%= f.file_field :images,multiple: true, accept: "images/*", data: {"turbolinks" => false}%>
  </div>

<div class="field">
  <%=f.label :"タイトル"%>
  <%= f.text_field :title, class: "form-control" %>
</div>

<div class="field">
  <%=f.label :"本文"%>
  <%= f.text_area :text, class: "form-control" %>
</div>

<div class="field">
  <%= f.label :tag_list, "タグ" %>
  <%= f.text_area :tag_list, value: @post_image.tag_list.join(','), placeholder: ",で区切ってタグ名を入力してください", class: "form-control" %>
</div>

<div class="actions">
  <% if @post_image.new_record? %>
    <%= f.submit "投稿する",class:"btn btn-primary" %>
  <% else %>
    <%= f.submit "保存する",class:"btn btn-primary" %>
  <% end %>
</div>
<% end %>