<%= render 'user/homes/header' %>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <ul class="home-item">
        <% @post_images.each do |post_image| %>
          <li class="post-item">
            <div class="post-image">
              <%= link_to user_post_image_path(post_image.id) do%>
              <%= image_tag(post_image.images.first) %>
              <% end %>
            </div>
            <div class="post-details">
              <div class="post-title-and-text">
                <div class="post-title">
                  <h4><%= post_image.title %></h4>
                </div>
                <div class="post-text">
                  <p><%= post_image.text %></p>
                </div>
              </div>
            </div>
          </li>
        <% end %>

<div class="pagination-container">
  <div class="pagination">
    <ul>
      <% if @related_posts.present? %>
        <%= paginate @related_posts %>
      <% end %>
    </ul>
  </div>
</div>

      </ul>
    </div>
  </div>
</div>