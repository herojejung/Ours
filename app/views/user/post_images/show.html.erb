<section class="inner">
  <% if flash[:notice] %>
    <p class="text-active"><%= flash[:notice] %></p>
  <% end %>

	<table class="customer_info mb3">
		<thead>
			<th></th>
			<th></th>
			<th></th>
		</thead>
		<tbody>
		  <tr>
		    <td>
		        <%= @post_image.user.name%>
		        <%= image_tag @post_image.user.get_image(50,50) %>
		    </td>
		  </tr>
		  <tr>
		  	<td><%= @post_image.title%></td>
		  </tr>
		  <tr>
			<td>
			    <% if @post_image.image.attached? %>
                 <% @post_image.image.each do |image| %>
                <%= image_tag @post_image.get_image(50,50) %>
                <% end %>
                <% end %>
            </td>
          </tr>
          <tr>
             <td><%= @post_image.text%></td>
          </tr>
          <tr>
             <td><%= @post_image.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
		</tbody>
	</table>
</section>
