<%= javascript_pack_tag 'preview', 'data-turbolinks-track': 'reload' %>
<div class="container">
	<div class="row">

<% if user_signed_in? %>  <!--未ログインでは投稿の操作は不可能にする-->
  <% if @post_image.user_id == current_user.id %> <!--ログインユーザーは自分の投稿以外は削除できないようにする-->
<section class="inner">
	<% if flash[:error] %>
		<div id="error_explanation">
			<p><%= flash[:error] %></p>
		</div>
	<% end %>
	<% end %>
	<% end %>
</section>

<ul class="tag">
  <% @post_image.tags.each do |tag| %>
    <li class="tag-name" style= "list-style: none;">
      <%= "#" + tag.name + " " %>
    </li>
  <% end %>
</ul>
</div>

<div class="col-8">
  <div class= "user-image">
   <%= image_tag current_user.image.variant(resize_to_limit: [50,50]) %>
   <p><%= @post_image.user.name %></p>
  </div>

<div class="flex">
  <% if @post_image.images.attached? %>
  	<% @post_image.images.each do |image| %>
  	<%= image_tag image.variant(resize_to_limit: [100, 100]) %>
   	<% end %>
  <% end %>
</div>

<div class="post-title">
  <p><%= @post_image.title%></p>
</div>

<div class="post-text">
  <p><%= @post_image.text%></p>
</div>

<div class="post-date">
  <p><%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
</div>

<div class="post-comment">
  <%= form_with model: @comment, url: user_post_images_path, local: true do |f| %>
    <%= f.text_area :content %>
  <%= f.submit "コメントする", class: "btn btn-primary"%>
  <% end %>
</div>

<li class="nav-item" style= "list-style: none;">
  <%= link_to "編集", edit_user_post_image_path(@post_image), class: "btn btn-success" %>
</li>
</div>
</div>
</div>
