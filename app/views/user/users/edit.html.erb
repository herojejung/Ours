<%= javascript_pack_tag 'preview', 'data-turbolinks-track': 'reload' %>
<%= render "loadimage" %>
<section class="inner">
<i class="fa-solid fa-pen-to-square" style= "font-size: 25px; ">投稿編集</i>
</section></br>

<%= form_with model: @user, url: user_user_path do |f| %>
	<%= render "users/shared/error_messages", resource: f.object %>

<img id="preview" src="#" alt="Image Preview" style="display:none;">
  <div class="field">
    <%= f.label :image,"プロフィール画像",for: "file-input" do%>
    <i class="fa-regular fa-image"></i>
    <%= f.file_field :image, class: "push", onchange: "previewImage(this);" %>
    <% end %>
  </div>
  
  <div class="field">
    <%= f.label :"ユーザーネーム" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "保存する",class:"btn btn-primary" %>
  </div>
  
  <div class="col-3 mx-auto">
  <%= link_to "退会する",  user_post_image_path, method: :delete, class: "btn btn-danger mt-0" %>
    <% end %>
  </div>
<% end %>
