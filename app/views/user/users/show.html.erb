<section class="inner">
  <% if flash[:notice] %>
    <p class="text-active"><%= flash[:notice] %></p>
  <% end %>
	<h2 class="section-ttl">マイページ</h2>

	<table class="customer_info mb3">
		<thead>
			<th></th>
			<th></th>
			<th></th>
		</thead>
		<tbody>
		  <tr>
		  	<td></td>
		  	<% if @user.image.present? %>
  			<td><%= image_tag @user.image %></td>
			<% end %>

			<td><%= link_to "ユーザー情報を編集する", edit_user_user_path, class: "btn btn-success ml2" %></td>
		  </tr>
		  <tr>
			<td>ユーザーネーム</td>
			<td><%= @user.name %></td>
		  </tr>
		  <tr>
			<td>メールアドレス</td>
			<td colspan="2"><%= @user.email %></td>
		  </tr>
		</tbody>
	</table>
	<div class="flex">
		<%= link_to "いいね一覧", user_likes_path, class: "btn btn-primary" %>
		<%= link_to "投稿一覧", user_users_path, class: "btn btn-primary ml2" %>
	</div>
</section>