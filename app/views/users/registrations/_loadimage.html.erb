<script>
function previewImage(input) {
  if (input.files && input.files[0]) {
    var reader = new FileReader();

    reader.onload = function(e) {
      $('#preview').attr('src', e.target.result);
      $('#preview').show();
    }

    reader.readAsDataURL(input.files[0]); //ファイルを読み込んでDataURL形式に変換
  }
}
</script>
<style>
p#preview  img{
    width:100px;
}
</style>