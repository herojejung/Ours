<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :image,"プロフィール画像",for: "file-input"%><span class="must">*</span><br />
    <%= f.file_field :images, class: "push", multiple: true, onchange: "loadImage(this);" %>
  </div>
  <div id="images" style="display: none;">
    <p id="preview"></p>
  </div>
  <%= render "loadimage" %><br />
  

  <div class="field">
    <%= f.label :"ユーザーネーム" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
  </div><br />

  <div class="field">
    <%= f.label :"パスワード" %>
    <em>(※英数字を含めた6~30文字以上を入力してください。)</em>
    <br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    <br />
    <%= f.password_field :password_confirmation,autocomplete: "new-password", placeholder: "確認のため、もう一度入力してください", class: 'form-control' %>
  </div>

   <br />
  <div class="actions">
    <%= f.submit "新規登録を行う",class:"btn btn-primary" %>
  </div>
<% end %>
